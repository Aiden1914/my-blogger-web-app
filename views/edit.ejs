<%- include("partials/header.ejs") %>

<header>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css">
    <link rel="stylesheet" href="/styles/content.css">
    <link rel="stylesheet" href="/styles/style.css">
</header>

<h1 class="pt-5">Edit Post</h1>
<form class="container mt-1" action="/update/<%= title %>" method="POST">
    <div class="form-group">
        <label for="cTitle">Title</label>
        <input type="text" class="form-control feedback-input" id="cTitle" name="cTitle" value="<%= title %>">
    </div>
    <div class="form-group">
        <label for="cBody">Body</label>
        <textarea class="form-control feedback-input" id="cBody" name="cBody" rows="5"><%= body %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>